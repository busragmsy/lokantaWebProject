@page
@model lokantaWebProject.Areas.Identity.Pages.Account.LoginModel 

@{
    ViewData["Title"] = "Giriş Yap"; 
    Layout = "/Views/Shared/_IdentityLayout.cshtml"; 
}

<h3 class="card-title text-left mb-3">Giriş Yap</h3> @* Temanızın kart başlık stiline uygun *@

@* Identity hata özetini göstermek için *@
<div asp-validation-summary="All" class="text-danger"></div>

<form id="account" method="post">
    @Html.AntiForgeryToken() @* Güvenlik için ekleyin *@

    <div class="form-group">
        <label asp-for="Input.Email">Email</label> @* Input.Email kullanıldığı için label'ı Email olarak bırakın *@
        <input asp-for="Input.Email" class="form-control p_input" autocomplete="username" aria-required="true" /> @* Temanıza özel p_input sınıfını ekleyin *@
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password">Şifre</label>
        <input asp-for="Input.Password" class="form-control p_input" autocomplete="current-password" aria-required="true" /> @* Temanıza özel p_input sınıfını ekleyin *@
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group d-flex align-items-center justify-content-between">
        <div class="form-check">
            <label class="form-check-label">
                <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input"> @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <a asp-page="./ForgotPassword" class="forgot-pass">Şifremi Unuttum?</a> @* Temanızın Forgot password stili *@
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block enter-btn">Giriş Yap</button> @* Temanızın buton stili *@
    </div>

    @* Harici girişler için gerekli kısım (Eğer kullanıyorsanız, burayı temanızın buton stillerine göre güncelleyebilirsiniz) *@
    @if (Model.ExternalLogins != null && Model.ExternalLogins.Any())
    {
        <div class="d-flex mt-3">
            @foreach (var provider in Model.ExternalLogins)
            {
                <button type="submit" class="btn btn-block @(provider.DisplayName == "Facebook" ? "btn-facebook" : "btn-google") col @(provider.DisplayName == "Facebook" ? "mr-2" : "")" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                    <i class="mdi @(provider.DisplayName == "Facebook" ? "mdi-facebook" : "mdi-google-plus")"></i> @provider.DisplayName
                </button>
            }
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}