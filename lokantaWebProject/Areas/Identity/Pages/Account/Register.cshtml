@page
@model lokantaWebProject.Areas.Identity.Pages.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Register"; // Bu, layout dosyasındaki @ViewData["Title"]'ı doldurur
    Layout = "/Views/Shared/_IdentityLayout.cshtml"; // Hangi layout dosyasının kullanılacağını belirtir
}

<h3 class="card-title text-left mb-3">Register</h3>

@* Identity hata özetini göstermek için *@
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    @Html.AntiForgeryToken() @* Güvenlik için zorunlu *@

    <div class="form-group">
        <label>Username</label>
        <input type="text" asp-for="Input.UserName" class="form-control p_input">
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Input.Email" class="form-control p_input">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="Input.Password" class="form-control p_input">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" asp-for="Input.ConfirmPassword" class="form-control p_input">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" asp-for="Input.FullName" class="form-control p_input">
        <span asp-validation-for="Input.FullName" class="text-danger"></span>
    </div>
    <div class="form-group d-flex align-items-center justify-content-between">
        <div class="form-check">
            <label class="form-check-label">
                <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input"> Remember me
            </label>
        </div>
        <a asp-page="./ForgotPassword" class="forgot-pass">Forgot password</a>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block enter-btn">Register</button>
    </div>
    <div class="d-flex">
        @* Harici girişler için gerekli kısım *@
        @if (Model.ExternalLogins != null && Model.ExternalLogins.Any())
        {
            @foreach (var provider in Model.ExternalLogins)
            {
                <button type="submit" class="btn btn-block @(provider.DisplayName == "Facebook" ? "btn-facebook" : "btn-google") col @(provider.DisplayName == "Facebook" ? "mr-2" : "")" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                    <i class="mdi @(provider.DisplayName == "Facebook" ? "mdi-facebook" : "mdi-google-plus")"></i> @provider.DisplayName
                </button>
            }
        }
    </div>
    <p class="sign-up text-center">
        Already have an Account?
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> Sign In</a>
    </p>
    <p class="terms">By creating an account you are accepting our<a href="#"> Terms & Conditions</a></p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}