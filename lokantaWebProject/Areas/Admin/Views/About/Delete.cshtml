@using lokantaWebProject.Entities
@model About

@{
    ViewData["Title"] = "Hakkımızda Bilgisini Sil"; // Sayfanın başlığı
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6 offset-lg-3">
    <div class="card border-danger">
        <div class="card-body">
            <h4 class="card-title text-danger">Silme Onayı</h4> <p class="text-muted">Bu "Hakkımızda" bilgisini silmek istediğinizden emin misiniz?</p> <dl class="row">
                <dt class="col-sm-4">Başlık</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Açıklama</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" /> <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Silmeyi Onayla
                </button>

                <a href="@Url.Action("Index", "About")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>