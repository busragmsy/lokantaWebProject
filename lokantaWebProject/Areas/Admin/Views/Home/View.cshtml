    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Gelen Mesaj Sayısı</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.MessageCount</h2>
                            @* Dinamik mesaj sayısı *@
                            @if (ViewBag.UnreadMessagesCount > 0)
                            {
                                <p class="text-warning ml-2 mb-0 font-weight-medium">(@ViewBag.UnreadMessagesCount okunmamış)</p>
                            }
                        </div>
                        <h6 class="text-muted font-weight-normal">Toplam Gelen Mesajlar</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-email text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Toplam Kullanıcı Sayısı</h5> @* "Admin" yerine daha genel bir ifade kullanıldı *@
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.AdminCount</h2>
                            @* Dinamik kullanıcı sayısı *@
                        </div>
                        <h6 class="text-muted font-weight-normal">Sistemdeki Tüm Kayıtlı Kullanıcılar</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-account-multiple text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Menüdeki Ürün Sayısı</h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.MenuCount</h2>
                            @* Dinamik menü sayısı *@
                        </div>
                        <h6 class="text-muted font-weight-normal">Aktif Menü Ürünleri</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-food text-success ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>