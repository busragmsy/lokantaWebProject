@using lokantaWebProject.Entities
@using lokantaWebProject.Context
@model List<ToDo>

<div class="card" style="height: 393.6px;">
    <div class="card-body d-flex flex-column">
        <h4 class="card-title">To Do List</h4>

        <form asp-action="Add" asp-area="Admin" asp-controller="Home" method="post" class="d-flex mb-3">
            <input name="task" class="form-control" placeholder="Görev girin..." />
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>

        <div class="list-wrapper flex-grow-1 overflow-auto" style="max-height: 220px;">
            <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom p-0 m-0">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <li class="@(item.IsCompleted ? "completed" : "") d-flex justify-content-between align-items-center mb-2">
                            <form asp-action="Toggle" method="post" class="form-check form-check-primary m-0 flex-grow-1">
                                <label class="form-check-label w-100">
                                    <input class="checkbox" type="checkbox" onclick="this.form.submit()" @(item.IsCompleted ? "checked" : "") />
                                    @item.Task
                                </label>
                                <input type="hidden" name="id" value="@item.Id" />
                            </form>
                            <form asp-action="Delete" method="post" class="ml-2">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-link text-danger p-0" title="Sil">
                                    <i class="mdi mdi-close-box"></i>
                                </button>
                            </form>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
