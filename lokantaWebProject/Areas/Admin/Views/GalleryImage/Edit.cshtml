@using lokantaWebProject.Entities
@model GalleryImage

@{
    ViewData["Title"] = "Galeri Görseli Düzenle"; // Sayfanın başlığı
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 offset-lg-2">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Galeri Görseli Düzenle</h4> @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" /> @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="form-group text-center mb-4">
                        <label>Mevcut Görsel Önizlemesi:</label><br />
                        <img src="@Model.ImageUrl" alt="Mevcut Görsel" width="200" height="150" style="object-fit: cover; border-radius: 5px; border: 1px solid #ddd;" />
                    </div>
                }

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/galeri-fotografi.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Caption"></label>
                    <input asp-for="Caption" class="form-control" placeholder="Görsel için kısa bir açıklama" />
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Güncelle
                </button>
                <a href="@Url.Action("Index", "GalleryImage")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}