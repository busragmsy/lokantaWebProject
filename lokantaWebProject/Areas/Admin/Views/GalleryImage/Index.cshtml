@using lokantaWebProject.Entities
@model IEnumerable<GalleryImage>

@{
    ViewData["Title"] = "Galeri Görselleri"; // Sayfanın başlığı
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var count = 1; // Tablo satır numarası için sayaç
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Galeri Görselleri</h4> <p class="card-description">Restoranınızın galeri görsellerini buradan yönetebilirsiniz.</p> <a class="btn btn-inverse-success rounded-pill fw-bold mb-3" href="@Url.Action("Create", "GalleryImage")">
                <i class="fa fa-plus"></i> Yeni Görsel Ekle
            </a>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th>Görsel</th>
                            <th style="width: 250px;">Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Caption" width="100" height="75" style="object-fit: cover; border-radius: 5px;" />
                                    }
                                    else
                                    {
                                        <span>Görsel Yok</span>
                                    }
                                </td>
                                <td style="width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @{
                                        string displayText = item.Caption;
                                        if (string.IsNullOrEmpty(displayText)) displayText = "Açıklama Yok";
                                        int maxLength = 100; // Gösterilecek maksimum karakter sayısı
                                        if (displayText.Length > maxLength)
                                        {
                                            displayText = displayText.Substring(0, maxLength) + "...";
                                        }
                                    }
                                    @displayText
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-inverse-primary rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Edit", "GalleryImage", new { id = item.Id })">
                                        <i class="fa fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-inverse-info rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Details", "GalleryImage", new { id = item.Id })">
                                        <i class="fa fa-eye"></i> Detaylar
                                    </a>
                                    <a class="btn btn-sm btn-inverse-danger rounded-pill fw-bold" href="@Url.Action("Delete", "GalleryImage", new { id = item.Id })" onclick="return confirm('Bu görseli silmek istediğinizden emin misiniz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                            count++; // Sayaç her satırda artırılır
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>