@using lokantaWebProject.Entities
@model IEnumerable<ContactInfo>

@{
    ViewData["Title"] = "İletişim Bilgileri"; // Sayfanın başlığı
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var count = 1; // Tablo satır numarası için sayaç
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Bilgileri</h4> <p class="card-description">Restoranınızın iletişim bilgilerini buradan yönetebilirsiniz.</p> <a class="btn btn-inverse-success rounded-pill fw-bold mb-3" href="@Url.Action("Create", "ContactInfo")">
                <i class="fa fa-plus"></i> Yeni İletişim Bilgisi Ekle
            </a>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th style="width: 90px;">Adres</th>
                            <th>Telefon</th>
                            <th style="width: 80px;">E-posta</th>
                            <th>Sosyal Medya</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td style="width: 90px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @{
                                        string addressText = item.Address;
                                        int addressMaxLength = 15;
                                        if (addressText.Length > addressMaxLength)
                                        {
                                            addressText = addressText.Substring(0, addressMaxLength) + "...";
                                        }
                                    }
                                    @addressText
                                </td>
                                <td>@item.Phone</td>
                                <td style="width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @{
                                        string emailText = item.Email;
                                        int emailMaxLength = 50;
                                        if (emailText.Length > emailMaxLength)
                                        {
                                            emailText = emailText.Substring(0, emailMaxLength) + "...";
                                        }
                                    }
                                    @emailText
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FacebookUrl))
                                    {
                                        <a href="@item.FacebookUrl" target="_blank" class="text-primary me-2"><i class="fab fa-facebook-f"></i></a>
                                    }
                                    @if (!string.IsNullOrEmpty(item.InstagramUrl))
                                    {
                                        <a href="@item.InstagramUrl" target="_blank" class="text-danger me-2"><i class="fab fa-instagram"></i></a>
                                    }
                                    @if (!string.IsNullOrEmpty(item.TwitterUrl))
                                    {
                                        <a href="@item.TwitterUrl" target="_blank" class="text-info"><i class="fab fa-twitter"></i></a>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-inverse-primary rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Edit", "ContactInfo", new { id = item.Id })">
                                        <i class="fa fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-inverse-info rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Details", "ContactInfo", new { id = item.Id })">
                                        <i class="fa fa-eye"></i> Detaylar
                                    </a>
                                    <a class="btn btn-sm btn-inverse-danger rounded-pill fw-bold" href="@Url.Action("Delete", "ContactInfo", new { id = item.Id })" onclick="return confirm('Bu iletişim bilgisini silmek istediğinizden emin misiniz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                            count++; // Sayaç her satırda artırılır
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>