@using lokantaWebProject.Entities
@model ContactInfo

@{
    ViewData["Title"] = "İletişim Bilgisini Sil"; // Sayfanın başlığı
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6 offset-lg-3">
    <div class="card border-danger">
        <div class="card-body">
            <h4 class="card-title text-danger">Silme Onayı</h4> <p class="text-muted">Bu iletişim bilgisini silmek istediğinizden emin misiniz?</p> <dl class="row">
                <dt class="col-sm-4">Adres</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Telefon</dt>
                <dd class="col-sm-8">@Model.Phone</dd>

                <dt class="col-sm-4">E-posta</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Facebook URL</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.FacebookUrl) ? "Yok" : Model.FacebookUrl)</dd>

                <dt class="col-sm-4">Instagram URL</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.InstagramUrl) ? "Yok" : Model.InstagramUrl)</dd>

                <dt class="col-sm-4">Twitter URL</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.TwitterUrl) ? "Yok" : Model.TwitterUrl)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" /> <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Silmeyi Onayla
                </button>

                <a href="@Url.Action("Index", "ContactInfo")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>