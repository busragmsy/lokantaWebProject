<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("_HeadPartial")

<body class="index-page">

    @await Component.InvokeAsync("Navbar")

    <main class="main">
        <!-- Hero Section -->
        @await Component.InvokeAsync("Hero")

        @RenderBody()
    </main>

    @await Component.InvokeAsync("Footer")


    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/restaurantly-1.0.0/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/aos/aos.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/restaurantly-1.0.0/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/restaurantly-1.0.0/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>