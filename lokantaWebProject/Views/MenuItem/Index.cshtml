@using lokantaWebProject.Entities
@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menu Items</h4>
            <p class="card-description">You can manage your restaurant's menu items here.</p>

            <a class="btn btn-success mb-3" href="@Url.Action("Create", "MenuItem")">
                <i class="fa fa-plus"></i> Add New Item
            </a>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Category?.Name</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "MenuItem", new { id = item.Id })">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", "MenuItem", new { id = item.Id })">
                                        <i class="fa fa-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "MenuItem", new { id = item.Id })" onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


