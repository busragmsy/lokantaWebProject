@using lokantaWebProject.Entities
@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Menü Öğeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menü Öğeleri</h4>
            <p class="card-description">Restoranınızın menü öğelerini buradan yönetebilirsiniz.</p>

            <a class="btn btn-inverse-success rounded-pill fw-bold mb-3" asp-action="Create">
                <i class="fa fa-plus"></i> Yeni Menü Öğesi Ekle
            </a>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th>Görsel</th>
                            <th>Adı</th>
                            <th>Açıklama</th>
                            <th>Fiyat</th>
                            <th>Kategori</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.Name" width="75" height="75" class="rounded" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Category?.Name</td>
                                <td>
                                    <a class="btn btn-sm btn-inverse-primary rounded-pill fw-bold" style="margin-right: 10px;" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fa fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-inverse-info rounded-pill fw-bold" style="margin-right: 10px;" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fa fa-eye"></i> Detaylar
                                    </a>
                                    <a class="btn btn-sm btn-inverse-danger rounded-pill fw-bold" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinizden emin misiniz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>