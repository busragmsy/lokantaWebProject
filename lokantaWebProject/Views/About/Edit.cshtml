@using lokantaWebProject.Entities
@model About

@{
    ViewData["Title"] = "Hakkımızda Bilgisi Düzenle"; // Sayfanın başlığı
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kullanılan layout dosyası
}

<div class="col-lg-8 offset-lg-2">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda Bilgisi Düzenle</h4> @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" /> <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Güncelle
                </button>
                <a href="@Url.Action("Index", "About")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}