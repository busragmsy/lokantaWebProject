@using lokantaWebProject.Entities
@model Comment

@{
    ViewData["Title"] = "Yorum Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6 offset-lg-3">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Müşteri Yorumu Detayları</h4>

            <div class="text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl) && (Model.ImageUrl.StartsWith("http") || Model.ImageUrl.StartsWith("https")))
                {
                    <img src="@Model.ImageUrl" alt="@Model.AuthorName" class="rounded-circle" width="100" height="100" />
                }
                else if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <i class="@Model.ImageUrl fa-3x"></i>
                }
                else
                {
                    <i class="fa fa-user-circle fa-3x text-muted"></i>
                }
            </div>

            <dl class="row">
                <dt class="col-sm-4">Yorum Yapan Adı</dt>
                <dd class="col-sm-8">@Model.AuthorName</dd>

                <dt class="col-sm-4">Yorum İçeriği</dt>
                <dd class="col-sm-8">@Model.Text</dd>

                <dt class="col-sm-4">Puan</dt>
                <dd class="col-sm-8">
                    @for (int i = 0; i < Model.Rating; i++)
                    {
                        <i class="fa fa-star text-warning"></i>
                    }
                    (@Model.Rating / 5)
                </dd>

                <dt class="col-sm-4">Eklenme Tarihi</dt>
                <dd class="col-sm-8">@Model.DatePosted.ToString("dd MMMM yyyy HH:mm")</dd>

                <dt class="col-sm-4">Fotoğraf/İkon URL'si</dt>
                <dd class="col-sm-8">@Model.ImageUrl</dd>
            </dl>

            <a href="@Url.Action("Edit", "Comment", new { id = Model.Id })" class="btn btn-primary">
                <i class="fa fa-pencil-alt"></i> Düzenle
            </a>
            <a href="@Url.Action("Index", "Comment")" class="btn btn-secondary">
                Listeye Geri Dön
            </a>
        </div>
    </div>
</div>