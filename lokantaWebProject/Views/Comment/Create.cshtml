@using lokantaWebProject.Entities
@model Comment

@{
    ViewData["Title"] = "Yeni Yorum Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 offset-lg-2">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Müşteri Yorumu Ekle</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="AuthorName"></label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Text"></label>
                    <textarea asp-for="Text" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/photo.jpg veya fa-user" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Rating"></label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DatePosted"></label>
                    <input asp-for="DatePosted" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DatePosted" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-inverse-success rounded-pill fw-bold">
                    <i class="fa fa-save"></i> Kaydet
                </button>
                <a href="@Url.Action("Index", "Comment")" class="btn btn-secondary rounded-pill fw-bold">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}