@using lokantaWebProject.Entities
@model Message

@{
    ViewData["Title"] = "Mesajı Sil"; // Sayfanın başlığı
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kullanılan layout dosyası
}

<div class="col-lg-6 offset-lg-3">
    <div class="card border-danger">
        <div class="card-body">
            <h4 class="card-title text-danger">Silme Onayı</h4> <p class="text-muted">Bu mesajı silmek istediğinizden emin misiniz?</p> <dl class="row">
                <dt class="col-sm-4">Gönderen Adı</dt>
                <dd class="col-sm-8">@Model.SenderName</dd>

                <dt class="col-sm-4">Gönderen E-posta</dt>
                <dd class="col-sm-8">@Model.SenderEmail</dd>

                <dt class="col-sm-4">Konu</dt>
                <dd class="col-sm-8">@Model.Subject</dd>

                <dt class="col-sm-4">Gönderilme Tarihi</dt>
                <dd class="col-sm-8">@Model.SentDate.ToString("dd.MM.yyyy HH:mm")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" /> <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Silmeyi Onayla
                </button>

                <a href="@Url.Action("Index", "Message")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>