@using lokantaWebProject.Entities
@model GalleryImage

@{
    ViewData["Title"] = "Galeri Görselini Sil"; // Sayfanın başlığı
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kullanılan layout dosyası
}

<div class="col-lg-6 offset-lg-3">
    <div class="card border-danger">
        <div class="card-body">
            <h4 class="card-title text-danger">Silme Onayı</h4> <p class="text-muted">Bu galeri görselini silmek istediğinizden emin misiniz?</p> <dl class="row">
                <dt class="col-sm-4">Görsel URL'si</dt>
                <dd class="col-sm-8">@Model.ImageUrl</dd>

                <dt class="col-sm-4">Açıklama</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Caption) ? "Açıklama Yok" : Model.Caption)</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImageUrl" alt="Silinecek Görsel" width="200" height="150" style="object-fit: cover; border-radius: 5px; border: 1px solid #ddd;" />
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" /> <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Silmeyi Onayla
                </button>

                <a href="@Url.Action("Index", "GalleryImage")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>