@using lokantaWebProject.Entities
@model TeamMember

@{
    ViewData["Title"] = "Ekip Üyesi Detayları"; // Sayfanın başlığı
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kullanılan layout dosyası
}

<div class="col-lg-6 offset-lg-3">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Üyesi Detayları</h4> <div class="text-center mb-4">
                <img src="@Model.PhotoUrl" alt="@Model.FullName" class="rounded-circle" width="120" height="120" />
            </div>

            <dl class="row">
                <dt class="col-sm-4">Tam Adı</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Görevi</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Biyografi</dt>
                <dd class="col-sm-8">@Model.Bio</dd>

                <dt class="col-sm-4">Fotoğraf URL'si</dt>
                <dd class="col-sm-8">@Model.PhotoUrl</dd>
            </dl>

            <a href="@Url.Action("Edit", "TeamMember", new { id = Model.Id })" class="btn btn-primary">
                <i class="fa fa-pencil-alt"></i> Düzenle
            </a>
            <a href="@Url.Action("Index", "TeamMember")" class="btn btn-secondary">
                Listeye Geri Dön
            </a>
        </div>
    </div>
</div>