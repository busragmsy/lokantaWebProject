@using lokantaWebProject.Entities
@model TeamMember

@{
    ViewData["Title"] = "Ekip Üyesi Düzenle"; // Sayfanın başlığı
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kullanılan layout dosyası
}

<div class="col-lg-8 offset-lg-2">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Üyesi Düzenle</h4> @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" /> <div class="form-group">
                    <label asp-for="FullName">Tam Adı</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Role">Görevi</label>
                    <input asp-for="Role" class="form-control" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhotoUrl">Fotoğraf URL'si</label>
                    <input asp-for="PhotoUrl" class="form-control" />
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Güncelle
                </button>
                <a href="@Url.Action("Index", "TeamMember")" class="btn btn-secondary">
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}