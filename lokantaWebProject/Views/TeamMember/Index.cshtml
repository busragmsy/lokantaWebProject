@using lokantaWebProject.Entities
@model IEnumerable<TeamMember>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Members</h4>
            <p class="card-description">You can manage your team members here.</p>
            
            <!-- Search Form -->
            <form method="get" asp-action="Index" asp-controller="TeamMember">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" name="searchText" placeholder="Search by name" />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary" type="submit">Search</button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th>Photo</th>
                            <th>Full Name</th>
                            <th>Role</th>
                            <th>Bio</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@member.PhotoUrl" alt="@member.FullName" width="75" height="75" class="rounded-circle" />
                                </td>
                                <td>@member.FullName</td>
                                <td>@member.Role</td>
                                <td>@member.Bio</td>
                                <td>
                                    <a class="btn btn-sm btn-inverse-primary rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Edit", "TeamMember", new { id = member.Id })">
                                        <i class="fa fa-pencil-alt"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-inverse-info rounded-pill fw-bold" style="margin-right: 20px;" href="@Url.Action("Details", "TeamMember", new { id = member.Id })">
                                        <i class="fa fa-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm btn-inverse-danger rounded-pill fw-bold" href="@Url.Action("Delete", "TeamMember", new { id = member.Id })" onclick="return confirm('Are you sure you want to delete this team member?');">
                                        <i class="fa fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <a class="btn btn-inverse-success rounded-pill fw-bold mt-3" href="@Url.Action("Create", "TeamMember")">
                    <i class="fa fa-plus"></i> Add New Team Member
                </a>
            </div>
        </div>
    </div>
</div>
